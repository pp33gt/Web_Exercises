@model Storage_Ovn11.Models.ProductSearchViewModel


@{
    ViewData["Title"] = "SearchView";
}

<h1>SearchView</h1>

<h4>ProductSearchViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="CategoryId" asp-items="Model.Categories"></select>
            </div>
            <div class="form-group">
                <select asp-for="SearchString" asp-items="Model.Products"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().Name) 
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().Shelf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductsResult.FirstOrDefault().Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductsResult)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shelf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
